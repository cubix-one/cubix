{
	"name": "cubix-one",
	"version": "0.7.1",
	"description": "monorepo for cubix-one roblox framework",
	"workspaces": ["packages/*"],
	"bin": {
		"cubix": "dist/packages/cli/index.js"
	},
	"scripts": {
		"build": "concurrently -n 'cli,utils,logger' -c 'yellow,blue,green' 'bun run build:cli' 'bun run build:utils' 'bun run build:logger'",
		"build:cli": "cd packages/cli && bun run build",
		"build:utils": "cd packages/utils && bun run build",
		"build:logger": "cd packages/logger && bun run build",
		"typecheck": "bunx --bun tsc",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/bun": "latest",
		"typescript": "^5.0.0",
		"concurrently": "^8.2.2"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"files": [
		"dist/packages/cli/index.js",
		"dist/packages/cli/rojo.exe",
		"dist/packages/utils/index.js"
	]
}
